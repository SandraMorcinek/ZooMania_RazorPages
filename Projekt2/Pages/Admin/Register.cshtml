@page
@using Microsoft.AspNetCore.Mvc.Rendering
@model Projekt2.Pages.RegisterModel
@{
	ViewData["Title"] = "Zarejestruj się";

    <h1>Rejestracja</h1>

    <form method="post">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        <div class="form-group">
            <label for="username">Login:</label>
            <input type="text" class="form-control" id="username" name="NewUser.Username" />
            <span asp-validation-for="NewUser.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="password">Hasło:</label>
            <input type="password" class="form-control" id="password" name="NewUser.Password" />
            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="name">Imię:</label>
            <input type="text" class="form-control" id="name" name="NewUser.Name" />
            <span asp-validation-for="NewUser.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="lastname">Nazwisko:</label>
            <input type="text" class="form-control" id="lastname" name="NewUser.Lastname" />
            <span asp-validation-for="NewUser.Lastname" class="text-danger"></span>
        </div>

        <div class="form-group mb-5">
            <label for="email">E-mail:</label>
            <input type="email" class="form-control" id="email" name="NewUser.Email" />
            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mb-5">Załóż konto</button>
    </form>


}
