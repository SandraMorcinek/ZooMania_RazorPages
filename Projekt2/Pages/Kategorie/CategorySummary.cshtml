@page
@model Projekt2.Pages.Kategorie.CategorySummaryModel
@{
	ViewData["Title"] = "Kategorie produktów";
}

<div class="container mt-3">
    <h2>Kategorie</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Nazwa kategorii</th>
                    <th>Liczba produktów</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>
                            @category.Category.Name
                        </td>
                        <td>
                            @category.ProductCount
                        </td>
                        <td>
                            <a asp-page="/Kategorie/CategoryProducts" asp-route-categoryId="@category.Category.Id" class="btn btn-primary" id="sciezka">Zobacz produkty</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



